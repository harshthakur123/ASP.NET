@using FruitApp.Entities;

<form action="/fruit/add" method="post">

    <table>
        <tr>
            <td>
                Name
            </td>
            <td>
                <input type="text" id="name" name="name" required>
            </td>
        </tr>

        <tr>
            <td>
                Price
            </td>
            <td>
                <input type="text" id="price" name="price" required>
            </td>
        </tr>

        <tr>
            <td>
                Taste
            </td>
            <td>
                <input type="text" id="taste" name="taste" required>
            </td>
        </tr>
        
        <tr>
            <td>
                Colour
            </td>
            <td>
                <input type="text" id="colour" name="colour" required>
            </td>
        </tr>
        
        <tr>
            <td>
                Quantity
            </td>
            <td>
                <input type="text" id="quantity" name="quantity" required>
            </td>
        </tr>

    </table>
    <button type="submit" class="btn btn-success">Add Fruit</button>
</form>
