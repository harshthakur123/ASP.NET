@using FruitApp.Entities;

<form action="/fruit/update" method="post">

    <table>
        <tr>
            <td>
                Name
            </td>
            <td>
                <input type="text" id="name" name="name" value="@Model.Name" required readonly>
            </td>
        </tr>

        <tr>
            <td>
                Price
            </td>
            <td>
                <input type="text" id="price" name="price" value="@Model.Price" required>
            </td>
        </tr>

        <tr>
            <td>
                Taste
            </td>
            <td>
                <input type="text" id="taste" name="taste" value="@Model.Taste" required>
            </td>
        </tr>
        
        <tr>
            <td>
                Colour
            </td>
            <td>
                <input type="text" id="colour" name="colour" value="@Model.Colour" required>
            </td>
        </tr>
        
        <tr>
            <td>
                Quantity
            </td>
            <td>
                <input type="text" id="quantity" name="quantity" value="@Model.Quantity" required>
            </td>
        </tr>

    </table>
    <button type="submit" class="btn btn-success">Update</button>
</form>
